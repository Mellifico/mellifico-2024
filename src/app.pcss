/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
	@apply text-[16px];
}
html {
	@apply bg-secondary-darker text-primary-light;
}
h1,
h2,
h3,
h4,
h5,
h6 {
	@apply my-8 text-primary-dark;
}
h1 {
	@apply text-5xl;
}
h2 {
	@apply text-4xl;
}
h3 {
	@apply text-3xl;
}
h4 {
	@apply text-2xl;
}
h5 {
	@apply text-xl;
}
h6 {
	@apply text-lg;
}
p {
	@apply text-lg leading-loose max-w-prose;
}
